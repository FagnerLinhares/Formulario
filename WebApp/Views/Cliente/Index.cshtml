@model IEnumerable<ClienteViewModel>
<a asp-action="Cadastro" asp-controller="Cliente">Novo Cliente</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Nome</th>
            <th scope="col">Sobrenome</th>
            <th scope="col">Data de Nascimento</th>
            <th scope="col">CPF</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <th scope="row">@cliente.Nome</th>
                <td>@cliente.Sobrenome</td>
                <td>@cliente.DataNascimento</td>
                <td>@cliente.Cpf</td>
                <td>
                    <a asp-action="Editar" asp-controller="Cliente" asp-route-id="@cliente.Id">Editar</a>
                    <a asp-action="Excluir" asp-controller="Cliente" asp-route-id="@cliente.Id">Excluir</a>
                    <a asp-action="Detalhe" asp-controller="Cliente" asp-route-id="@cliente.Id">Detalhes</a>
                </td>
            </tr>
        }
    </tbody>
</table>



